!!! html
%html
  %head
    %title= title(@title)
    = stylesheet_link_tag "application"
    = javascript_include_tag :defaults
    = csrf_meta_tag
    = auto_discovery_link_tag(:atom, "/feed/index.atom")
    = yield(:head)
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
  %body
    #container
      #identifier
        %p#logo
          %span
            BRIAN HICKS
        %ul#navigation
          %li
            %a{ :href => root_path } Home
            %ul
              %li
                %a{ :href => "/graphic" } Graphic Design
              %li
                %a{ :href => "/web" } Web Design
          %li
            %a{ :href => about_path } About
          %li
            %a{ :href => philosophy_path } Philosophy
          %li
            %a{ :href => contact_path } Contact
        %ul#contact
          %li (719) 351-6993
          %li
            %a{ :href => "mailto:hicksb@jbu.edu" } brian@brianthicks.com
      #content      
        - flash.each do |name, msg| 
          = content_tag :div, msg, :id => "flash_#{name}" 
        = yield
        #colophon
          %p
            Design and code by Brian Hicks. Interested? Read the
            = link_to "about", about_path
            page to learn more.
          %p        
            -if user_signed_in?
              = link_to "sign out", destroy_user_session_path
              = link_to "New Portfolio Item", new_portfolio_item_path
            -else
              = link_to "sign in", new_user_session_path
        #debug
          = debug(params) if Rails.env.development? 
          = @debug unless @debug.nil?
  #lower-right-flame
